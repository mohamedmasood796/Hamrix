<%- include('./include/admin-headlink'); %>
    <%- include('./include/admin-navside'); %>
        <%- include('./include/admin-header'); %>

            <section>
                <div class=" container">
                    <div class="row">
                        <div class="col-md-12 mt-4">

                            <table class="table">
                                <thead>
                                    <tr>

                                        <th scope="col">Product Id</th>
                                        <th scope="col">Address</th>
                                        <th scope="col">quantity</th>
                                        <th scope="col">Total Price</th>
                                        <th scope="col">Date</th>
                                        <th scope="col">Payment</th>
                                        <th scope="col">Status</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% userOrder.forEach(function(data,index) { %>
                                        <% data.products.forEach(function(product) { %>
                                            <tr>

                                                <td>
                                                    <%= product._id %>
                                                </td>
                                                <td>
                                                    <%= data.deliveryAddress[0].name %>,<br>
                                                        <%= data.deliveryAddress[0].city %>,<%=
                                                                data.deliveryAddress[0].state %>,<br>
                                                                <%= data.deliveryAddress[0].country %>,<%=data.deliveryAddress[0].zip %>
                                                </td>
                                                <td>
                                                    <%= product.quantity%>
                                                </td>
                                                <td>
                                                    <%= data.total %>
                                                </td>
                                                <td>
                                                    <%= data.date %>
                                                </td>
                                                <td>
                                                    <%= data.paymentType%>
                                                </td>
                                                <td>
                                                    <%= data.status %>
                                                </td>
                                                <td>
                                                    <div class="dropdown ">  

                                                        <select class="form-select" aria-label="Default select example">
                                                            <option selected>Delivery status</option>
                                                            <option value="cancelled">Cancelled</option>
                                                            <option value="2">Pending </option>
                                                            <option value="3">Placed</option>
                                                            <option value="3">Shipped</option>
                                                            <option value="3"> Delivered</option>
                                                          </select>

                                                    </div>  
                                                    
                                                </td>
                                                <td>
                                                    <a href="/admin/veiwOneProduct/<%=data._id%>" type="button" class="btn btn-success">View</a>
                                                </td>
                                                

                                            </tr>
                                            <% }); %>

                                                <% }); %>
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </section>

            <style>  
                .dropbtn {  
                    background-color: rgb(255, 0, 0);  
                    color: rgb(255, 255, 255);  
                    padding: 10px;  
                    font-size: 14px;  
                }  
                .dropdown {  
                    display: inline-block;  
                    position: relative  
                }  
                .dropdown-content {  
                    position: absolute;  
                    background-color: lightgrey;  
                    min-width: 118px;  
                    display: none;  
                    z-index: 1;  
                }  
                .dropdown-content a {  
                    color: black;  
                    padding: 12px 16px;  
                    text-decoration: none;  
                    display: block;  
                }  
                .dropdown-content a:hover {  
                    background-color: rgb(137, 110, 110);  
                }  
                .dropdown:hover .dropdown-content {  
                    display: block;  
                }  
                .dropdown:hover .dropbtn {  
                    background-color: grey;  
                }  
                </style>  