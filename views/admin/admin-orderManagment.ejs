<%- include('./include/admin-headlink'); %>
    <%- include('./include/admin-navside'); %>
        <%- include('./include/admin-header'); %>

            <section>
                <div class=" container">
                    <div class="row">
                        <div class="col-md-12 mt-4">

                            <table class="table">
                                <thead>
                                    <tr>

                                        <th scope="col">Order Id</th>
                                        <th scope="col">Total Price</th>
                                        <th scope="col">Date</th>
                                        <th scope="col">Payment</th>
                                        <th scope="col">Status</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% userOrder.forEach(function(data,index) { %>
            
                                            <tr>

                                                <td>
                                                    <%= data._id %>
                                                </td>
                                            
                                                <td>
                                                    <%= data.total %>
                                                </td>
                                                <td>
                                                    <%= data.date %>
                                                </td>
                                                <td>
                                                    <%= data.paymentType%>
                                                </td>
                                                <td>
                                                
                                                    <% if(data.status==="cancelled"){%>
                                                        <p class="text-danger mb-0 small"> <strong><%=data.status%></strong>  </p>
                                                    <%} else if (data.status==="pending"){%>
                                                        <p class="text-warning mb-0 small"> <strong><%=data.status%></strong></p>
                                                    <%} else if (data.status==="delivered"){%>
                                                        <p class="text-success mb-0 small"> <strong><%=data.status%></strong> </p>
                                                    <%} else if (data.status==="shipped"){%>
                                                        <p class="text-info mb-0 small"> <strong><%=data.status%></strong> </p>
                                                    <%} else if (data.status==="placed"){%>
                                                        <p class="text-primary mb-0 small"><strong><%=data.status%></strong> </p>
                                                    <%}%>
                                                
                                                </td>
                                                
                                                <td>
                                                    <a href="/admin/veiwOneProduct/<%=data._id%>" type="button" class="btn btn-success m-5">View</a>
                                                </td>
                                                

                                            </tr>
                                            

                                                <% }); %>
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </section>

            <style>  
                .dropbtn {  
                    background-color: rgb(255, 0, 0);  
                    color: rgb(255, 255, 255);  
                    padding: 10px;  
                    font-size: 14px;  
                }  
                .dropdown {  
                    display: inline-block;  
                    position: relative  
                }  
                .dropdown-content {  
                    position: absolute;  
                    background-color: lightgrey;  
                    min-width: 118px;  
                    display: none;  
                    z-index: 1;  
                }  
                .dropdown-content a {  
                    color: black;  
                    padding: 12px 16px;  
                    text-decoration: none;  
                    display: block;  
                }  
                .dropdown-content a:hover {  
                    background-color: rgb(137, 110, 110);  
                }  
                .dropdown:hover .dropdown-content {  
                    display: block;  
                }  
                .dropdown:hover .dropbtn {  
                    background-color: grey;  
                }  
                </style>  