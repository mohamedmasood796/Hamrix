      <%- include('./include/admin-footer'); %>
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script>


          const data = {
            labels: [
            'Cancel Order',
            'Active Order',
              
              
            ],
            datasets: [{
              label: 'My First Dataset',
              data: ['<%=cancelOrder%>','<%=activeOrder%>' ],
              backgroundColor: [
                'rgb(255, 99, 132)',
                'rgb(54, 162, 235)',
    
              ],
              hoverOffset: 4
            }]
          };
          const config1 = {
            type: 'doughnut',
            data: data,
          }
          const myChart = new Chart(
            document.getElementById('myChart'),
            config1
          );
        </script>

