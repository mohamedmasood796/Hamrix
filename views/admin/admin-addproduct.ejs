<%- include('./include/admin-headlink'); %>
<%- include('./include/admin-navside'); %>
<%- include('./include/admin-header'); %>

<section>
    <div class=" container">
        <div class="row">
            <div class="col-md-6 mt-4">
                <h2 class="text-center">Add Product</h2>
                <form action="/admin/add-product" method="post"  enctype="multipart/form-data">
                    <label for=""> Product Name</label>
                    <input type="text" name="name" class="form-control"><br>

                    <label for="">Category</label>
                    <!-- <input type="text" name="category" class="form-control"><br> -->
                    <select type="text" name="category" class="form-control" id="select1">
                        <option value="">select...</option>
                        <% data.forEach(function(data) { %>
                        
                        <option value="<%=data.id%>"><%=data.name %></option>

                        <% }); %> 
                    </select><br>

                    <label for="">Description</label>
                    <input type="text" name="description" class="form-control"><br>

                    <label for="">Price</label>
                    <input type="text" name="price" class="form-control"><br>

                    <label for="">Image</label>
                    <input type="file" name="image" class="form-control" multiple><br>

                    <button type="submit" class="btn btn-success mt-4">submit</button>
                </form>
            </div>
        </div>
    </div>
</section>