<%- include('./include/admin-headlink'); %>
<%- include('./include/admin-navside'); %>
<%- include('./include/admin-header'); %>

<table class="table">
    <thead>
      <tr>
        
        <th scope="col">product name</th>
        <th scope="col">category</th>
        <th scope="col">description</th>
        <th scope="col">price</th>
        <th scope="col">image</th>
      </tr>
    </thead>
    <tbody>


      
        <% result.forEach(function(result) { %>
          <tr>
           <th><%= result.name %> </th>
           <th><%= result.category %></th>
           <th><%= result. description %></th>
           <th><%= result.price %> </th>
           <th><img style="width:50px; height: 50px" src="/product-images/<%= result.image %>" alt=""></th>
           <td>
            <a href="/admin/edit-user/{{this._id}}" class="btn btn-primary">Edit</a>
            <a href="/admin/delete-user/{{this._id}}" class="btn btn-danger" >Delete</a>
          </td>
          </tr>
        <% }); %> 

    </tbody>
  </table>