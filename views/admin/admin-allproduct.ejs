<%- include('./include/admin-headlink'); %>
<%- include('./include/admin-navside'); %>
<%- include('./include/admin-header'); %>

<table class="table">
    <thead>
      <tr>
        
        <th scope="col">NO</th>
        <th scope="col">product name</th>
        <th scope="col">category</th>
        <th scope="col">description</th>
        <th scope="col">price</th>
        <th scope="col">image</th>
      </tr>
    </thead>
    <tbody>


      
        <% result.forEach(function(result,index) { %>
          <tr>
            <th><%= index+1 %></th>
           <th><%= result.name %> </th>
           <th><%= result.category %></th>
           <th><%= result. description %></th>
           <th><%= result.price %> </th>
           <th><img style="width:50px; height: 50px" src="/product-images/<%= result.image[0] %>" alt=""></th>
           <td>
            <a href="/admin/edit-product/<%= result.id %>" class="btn btn-primary">Edit</a>
            <!-- <a href="/admin/delete-user/<%= result.id %>" class="btn btn-danger" >Delete</a> -->
          </td>
          </tr>
        <% }); %> 

    </tbody>
  </table>