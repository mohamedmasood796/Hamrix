<%- include('./include/admin-headlink'); %>
  <%- include('./include/admin-navside'); %>
    <%- include('./include/admin-header'); %>

      <table class="table">
        <thead>
          <tr>

            <th scope="col">NO</th>
            <th scope="col">product name</th>
            <th scope="col">category</th>
            <th scope="col">description</th>
            <th scope="col">price</th>
            <th scope="col">image</th>
          </tr>
        </thead>
        <tbody>



          <% result.forEach(function(result,index) { %>
            <tr>
              <th>
                <%= index+1 %>
              </th>
              <th>
                <%= result.name %>
              </th>
              <th>
                <%= result.category %>
              </th>
              <th>
                <%= result. description %>
              </th>
              <th>
                <%= result.price %>
              </th>
              <th><img style="width:50px; height: 50px" src="/product-images/<%= result.image[0] %>" alt=""></th>

              <td>
                <a href="/admin/edit-product/<%= result.id %>" class="btn btn-primary">Edit</a>
                <!-- <a href="/admin/delete-user/<%= result.id %>" class="btn btn-danger" >Delete</a> -->
              </td>
              <td>
                <% if (result.access) { %>
                  <a href="/admin/delete-Product/<%=result.id%>" class="btn btn-success" onclick="submit()">kanan</a>
                  <%} else { %>
                    <a href="/admin/undelete-Product/<%=result.id%>" class="btn btn-danger"
                      onclick="submit()">kanula</a>
                    <% } %>

              </td>
            </tr>
            <% }); %>

        </tbody>
      </table>
      <nav aria-label="Page navigation example">
        <ul class="pagination">
          <li class="page-item"><a class="page-link" href="#">Previous</a></li>
          <li class="page-item"><a class="page-link" href="/?page=1">1</a></li>
          <li class="page-item"><a class="page-link" href="/?page=2">2</a></li>
          <li class="page-item"><a class="page-link" href="/?page=3">3</a></li>
          <li class="page-item"><a class="page-link" href="#">Next</a></li>
        </ul>
      </nav>
      <script>
        function submit() {
          Swal.fire({

            icon: 'success',
            title: 'Your work has been saved',
            showConfirmButton: true,

            timer: 1500
          })
          setTimeout(() => {
            location.reload()
          }, 1000);

        }
      </script>
      