<%- include('./include/admin-headlink'); %>
    <%- include('./include/admin-navside'); %>
        <%- include('./include/admin-header'); %>

            <section>
                <div class=" container">
                    <div class="row">
                        <div class="col-md-6 mt-4">
                            <h2 class="text-center">Add Banner</h2>
                            <form action="/admin/addbanner" method="post" enctype="multipart/form-data">
                                <label for=""> Product Name</label>
                                <input type="text" name="name" class="form-control" required><br>

                                <label for="">Image</label>
                                <!-- <img style="width:50px; height: 50px" src="/product-images" alt="" id="imgView"> -->
                                <input type="file" name="image" class="form-control" multiple required><br>


                                <button type="submit" class="btn btn-success mt-4">submit</button>
                            </form>
                        </div>
                    </div>
                </div>
            </section>

            <section>
                <div class="container">
                    <div class="row">
                        <div class="col-md-12 mt-4">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">NO</th>
                                        <th scope="col">Banner Name</th>
                                        <th scope="col">Image</th>
                                        <th scope="col">select</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <% ans.forEach(function(ans,index) { %>
                                        <tr>
                                            <th>
                                                <%= index+1 %>
                                            </th>
                                            <th>
                                                <%= ans.name %>
                                            </th>

                                            <th><img style="width:50px; height: 50px"
                                                    src="/product-images/<%= ans.image[0] %>" alt=""></th>


                                            <td>
                                                <% if (ans.access) { %>
                                                    <a href="/admin/block-banner/<%=ans._id%>" onclick="submit()"
                                                        class="btn btn-success">kannam</a>
                                                    <%} else { %>
                                                        <a href="/admin/unblock-banner/<%=ans._id%>" onclick="submit()"
                                                            class="btn btn-danger">kanula</a>

                                                        <% } %>

                                            </td>
                                        </tr>
                                        <% }); %>
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </section>
            <script>
                function submit() {
                    Swal.fire({

                        icon: 'success',
                        title: 'Your work has been saved',
                        showConfirmButton: true,

                        timer: 1500
                    })

                }
            </script>