<%- include('./include/admin-headlink'); %>
<%- include('./include/admin-navside'); %>
<%- include('./include/admin-header'); %>

<section>
    <div class=" container">
        <div class="row">
            <div class="col-md-6 mt-4">
                <h2 class="text-center">Add Category</h2>
                <form action="/admin/add-category" method="post"  >
                    <label for=""> Category Name</label>
                    <input type="text" name="name" class="form-control" value="" required>
                    <button type="submit" class="btn btn-success mt-4">submit</button>
                </form>
            </div>
        </div>
    </div>
</section>
<section>
    <div class="container">
        <div class="row">
            <div class="col-md-12 mt-4">
                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">NO</th>
                        <th scope="col">Category Name</th>
                        <th scope="col">View Product</th>
                        <th scope="col">Delete </th>
                      </tr>
                    </thead>
                    <tbody>

                        <% ans.forEach(function(ans,index) { %>
                            <tr>
                                <th><%= index+1 %></th>
                                <th><%= ans.name %> </th>
                                <td><a href="/admin/view-productCategory/<%= ans.id %>" class="btn btn-primary">view product</a></td>
                                <td><a href="/admin/delete-category/<%= ans.id %>" class="btn btn-danger">Delete category</a></td>
                            </tr>
                          <% }); %> 
                    </tbody>
                  </table>

            </div>
        </div>
    </div>
</section>